<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXTrimSlider?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="mainPane" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../../css/GeneralStylesheet.css" xmlns="http://javafx.com/javafx/20.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.ihmc.scs2.sessionVisualizer.jfx.session.mcap.MCAPLogSessionManagerController">
    <children>
        <VBox layoutY="45.0" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" VBox.vgrow="NEVER">
                    <children>
                        <JFXSpinner fx:id="loadingSpinner" prefHeight="30.0" prefWidth="30.0" visible="false" HBox.hgrow="NEVER"/>
                        <JFXButton fx:id="openSessionButton" minHeight="-Infinity" minWidth="-Infinity" styleClass="start-session-button" text="Open log..."/>
                        <JFXButton fx:id="endSessionButton" minHeight="-Infinity" minWidth="-Infinity" styleClass="end-session-button" text="End session"/>
                    </children>
                </HBox>
                <GridPane hgap="5.0" minHeight="-Infinity" minWidth="-Infinity" vgap="5.0" VBox.vgrow="NEVER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                        <RowConstraints vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Session name:"/>
                        <Label fx:id="sessionNameLabel" minHeight="-Infinity" minWidth="-Infinity" text="sessionNameLabel" GridPane.columnIndex="1"/>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Date:" GridPane.rowIndex="1"/>
                        <Label fx:id="dateLabel" minHeight="-Infinity" minWidth="-Infinity" text="dateLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Log path:" GridPane.rowIndex="2"/>
                        <Label fx:id="logPathLabel" minHeight="-Infinity" minWidth="-Infinity" text="logPathLabel" GridPane.columnIndex="1"
                               GridPane.rowIndex="2"/>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Round DT (us):" GridPane.rowIndex="3"/>
                        <JFXTextField fx:id="desiredLogDTTextField" alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="75.0" text="1000"
                                      GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <tooltip>
                                <Tooltip
                                        text="When set to a value greater than 0, the log time of the messages will be rounded to the nearest multiple of this DT. The unit is in microseconds, i.e. set to 1000 to round to the nearest millisecond."/>
                            </tooltip>
                        </JFXTextField>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="Record tick period:" GridPane.rowIndex="4"/>
                        <JFXTextField fx:id="bufferRecordTickPeriodTextField" alignment="CENTER_RIGHT" maxWidth="-Infinity" prefWidth="75.0" text="1"
                                      GridPane.columnIndex="1" GridPane.rowIndex="4">
                        </JFXTextField>
                    </children>
                </GridPane>
                <JFXTrimSlider fx:id="logPositionSlider">
                    <padding>
                        <Insets bottom="20.0"/>
                    </padding>
                </JFXTrimSlider>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Label text="Link robot model:"/>
                        <JFXTextField fx:id="currentModelFilePathTextField" editable="false" text="Path to model file" HBox.hgrow="ALWAYS">
                            <HBox.margin>
                                <Insets/>
                            </HBox.margin>
                        </JFXTextField>
                        <JFXButton onAction="#requestLoadRobotModelFile" styleClass="open-robot-model-file-button" text="Load robot..."/>
                    </children>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </padding>
                </HBox>
                <TitledPane fx:id="thumbnailsTitledPane" animated="false" disable="true" expanded="false" maxHeight="1.7976931348623157E308"
                            maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="No video" VBox.vgrow="ALWAYS">
                    <content>
                        <FlowPane fx:id="videoThumbnailPane" hgap="2.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                                  minHeight="-Infinity" prefWidth="660.0" vgap="2.0"/>
                    </content>
                </TitledPane>
                <TitledPane fx:id="consoleOutputTitledPane" animated="false" disable="true" expanded="false" maxHeight="1.7976931348623157E308"
                            maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" text="Console output">
                    <content>
                        <ListView fx:id="consoleOutputListView"/>
                    </content>
                </TitledPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>
