         <graphic>
            <FontAwesomeIconView styleClass="chart-close-button-icon-view" />
         </graphic>
      </JFXButton>
   </children>
   <padding>
      <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
   </padding>
</HBox>
