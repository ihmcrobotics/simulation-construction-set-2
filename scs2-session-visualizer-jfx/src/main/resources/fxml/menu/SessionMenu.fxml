<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>
<Menu fx:id="menu" text="Session" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="us.ihmc.scs2.sessionVisualizer.jfx.controllers.menu.SessionMenuController">
    <items>
        <MenuItem onAction="#startRemoteSession" text="Connect to remote session...">
            <graphic>
                <FontIcon>
                    <styleClass>
                        <String fx:value="start-remote-session-icon-view"/>
                        <String fx:value="menu-item-icon-view"/>
                    </styleClass>
                </FontIcon>
            </graphic>
        </MenuItem>
        <MenuItem onAction="#startLogSession" text="Open log...">
            <graphic>
                <FontIcon>
                    <styleClass>
                        <String fx:value="start-log-session-icon-view"/>
                        <String fx:value="menu-item-icon-view"/>
                    </styleClass>
                </FontIcon>
            </graphic>
        </MenuItem>
        <MenuItem onAction="#startMCAPLogSession" text="Open MCAP log...">
            <graphic>
                <FontIcon>
                    <styleClass>
                        <String fx:value="start-log-session-icon-view"/>
                        <String fx:value="menu-item-icon-view"/>
                    </styleClass>
                </FontIcon>
            </graphic>
        </MenuItem>
    </items>
    <graphic>
        <FontIcon iconLiteral="fa-rocket"/>
    </graphic>
</Menu>
