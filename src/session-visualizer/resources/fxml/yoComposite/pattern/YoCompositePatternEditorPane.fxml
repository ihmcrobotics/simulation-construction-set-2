<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXCheckBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="mainPane" spacing="10.0" stylesheets="@../../../css/GeneralStylesheet.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.ihmc.scs2.sessionVisualizer.controllers.yoComposite.pattern.YoCompositePatternEditorController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Name:" />
            <JFXTextField fx:id="compositeNameTextField" HBox.hgrow="ALWAYS" />
            <ImageView fx:id="patternNameValidImageView" fitHeight="25.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icons/invalid-icon.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <JFXCheckBox fx:id="crossRegistryCompositeCheckBox" text="Cross-registry composite" />
      <AnchorPane VBox.vgrow="NEVER">
         <children>
            <Label text="Component identifiers" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <JFXButton fx:id="addComponentButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" onAction="#addComponent" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <graphic>
                  <FontAwesomeIconView>
                     <styleClass>
                        <String fx:value="add-icon-view" />
                        <String fx:value="composite-editor-icon-view" />
                     </styleClass></FontAwesomeIconView>
               </graphic>
            </JFXButton>
         </children>
      </AnchorPane>
      <ListView fx:id="componentIdentifiersListView" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
      <AnchorPane prefWidth="250.0" VBox.vgrow="NEVER">
         <children>
            <Label text="Preferred chart configurations:" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <JFXButton fx:id="addChartGroupModelButton" alignment="CENTER_RIGHT" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" onAction="#addChartGroupModel" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <graphic>
                  <FontAwesomeIconView>
                     <styleClass>
                        <String fx:value="add-icon-view" />
                        <String fx:value="composite-editor-icon-view" />
                     </styleClass></FontAwesomeIconView>
               </graphic>
            </JFXButton>
         </children>
      </AnchorPane>
      <ListView fx:id="chartGroupModelEditorListView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="SOMETIMES" />
   </children>
</VBox>
