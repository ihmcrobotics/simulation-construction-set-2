<Menu text="File" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.ihmc.scs2.sessionVisualizer.jfx.controllers.menu.FileMenuController">
   <items>
      <MenuItem onAction="#requestSnapshot" text="Take snapshot...">
         <graphic>
            <FontAwesomeIconView>
               <styleClass>
                  <String fx:value="snapshot-icon-view" />
                  <String fx:value="menu-item-icon-view" />
               </styleClass>
            </FontAwesomeIconView>
         </graphic>
      </MenuItem>
      <MenuItem onAction="#close" text="Close">
         <graphic>
            <OctIconView>
               <styleClass>
                  <String fx:value="close-icon-view" />
