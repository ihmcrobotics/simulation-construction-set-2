<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.scene.control.CustomMenuItem?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.HBox?>

<Menu text="Data Buffer" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="us.ihmc.scs2.sessionVisualizer.jfx.controllers.menu.DataBufferMenuController">
   <items>
      <MenuItem onAction="#requestCropDataBuffer" text="Crop buffer to In/Out">
         <graphic>
            <FontAwesomeIconView>
               <styleClass>
                  <String fx:value="crop-data-buffer-icon-view"/>
                  <String fx:value="menu-item-icon-view"/>
               </styleClass>
            </FontAwesomeIconView>
         </graphic>
      </MenuItem>
      <CustomMenuItem mnemonicParsing="false" text="Unspecified Action">
         <content>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <FontAwesomeIconView>
                     <styleClass>
                        <String fx:value="resize-data-buffer-icon-view"/>
                        <String fx:value="menu-item-icon-view"/>
                     </styleClass>
                  </FontAwesomeIconView>
                  <Label text="Buffer size:" textFill="#000000fc"/>
                  <JFXTextField fx:id="bufferSizeTextField" prefWidth="55.0"/>
               </children>
            </HBox>
         </content>
      </CustomMenuItem>
   </items>
</Menu>
